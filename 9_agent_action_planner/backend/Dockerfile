FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiamos o c칩digo apenas para permitir build inicial (mas ele ser치 sobrescrito pelo volume)
COPY . .

EXPOSE 8000

# Use reload s칩 em dev; o compose controlar치 isso
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]